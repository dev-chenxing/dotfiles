@theme "/usr/share/rofi/themes/gruvbox-light-soft.rasi"

* {
  highlight: bold;

  background: #fbdebb;
  background-color: @background;
  foreground: #514b39;
  border-color: #55513c;
  separatorcolor: @border-color;
  scrollbar-handle: @border-color;

